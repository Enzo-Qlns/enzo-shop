{% extends 'base.html.twig' %}

{% block body %}
    <section class="py-5">
        <div class="container">
            <div class="row">
                <!-- Colonne gauche : images -->
                <div class="col-md-6">
                    <div class="d-flex">
                        <div class="me-3 d-none d-md-block">
                            <!-- Miniatures (à dupliquer si plusieurs images) -->
                            <img src="/uploads/products/{{ product.illustration }}" class="img-thumbnail mb-2 product-thumb" style="width: 60px; height: 60px; object-fit: cover;" alt="Miniature produit">
                            <!-- <img src="..." class="img-thumbnail mb-2 product-thumb" ...> -->
                        </div>
                        <div class="flex-grow-1">
                            <img src="/uploads/products/{{ product.illustration }}" class="img-fluid rounded product-main-img" style="max-height: 450px; object-fit: contain;" alt="{{ product.name }}">
                        </div>
                    </div>
                </div>
                <!-- Colonne droite : infos produit -->
                <div class="col-md-6 mt-4 mt-md-0">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb small">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('app_category', {slug: product.category.slug}) }}">{{ product.category.name }}</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{ product.name }}</li>
                        </ol>
                    </nav>
                    <h1 class="h3 mb-2">{{ product.name }}</h1>
                    <p class="text-muted mb-2">100% coton bio - Coupe ajustée - Détail col contrasté</p>
                    <div class="mb-3">
                        <span class="text-decoration-line-through text-muted h5 me-2">{{ (product.price * 1.2) | price }}</span>
                        <span class="h3 text-danger fw-bold">{{ product.price | price }}</span>
                        <span class="badge bg-warning text-dark ms-2 align-middle">JOURS FLASH</span>
                    </div>
                    <div class="mb-2">
                        <a href="#" class="text-success small fw-bold">Payez en 3x dès 199€ d'achat</a>
                    </div>
                    <div class="mb-3">
                        <span class="fw-bold">COULEURS DISPONIBLES</span>
                        <div class="d-flex mt-2">
                            <img src="/uploads/products/{{ product.illustration }}" class="img-thumbnail me-2" style="width: 48px; height: 48px; object-fit: cover;" alt="Couleur 1">
                            <!-- <img src="..." class="img-thumbnail me-2" ...> -->
                        </div>
                    </div>
                    <form method="post" action="{{ path('app_cart_add', {id: product.id } ) }}">
                        <input type="number" name="quantity" value="1" min="1" class="form-control mx-2 text-center" style="width: 60px;">
                        <div class="mb-3">
                            <a href="#" class="small text-decoration-underline">Voir la disponibilité en magasin</a>
                        </div>
                        <button type="submit" class="btn btn-lg btn-warning w-100 fw-bold">AJOUTER AU PANIER</button>
                    </form>
                    <div class="mt-3">
                        <span class="small text-muted">Le mannequin mesure 1,83m et porte un polo taille M</span>
                    </div>
                    <div class="mt-4">
                        <div class="description">
                            {{ product.description|raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}