{% extends 'base.html.twig' %}

{% block title %}Inscription - Enzo Shop{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg fade-in">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i data-feather="user-plus" class="feature-icon mb-3"></i>
                            <h1 class="h3 mb-3 fw-normal">Créer un compte</h1>
                        </div>

                        {{ form_start(registerForm, {'attr': {'class': 'needs-validation'}}) }}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(registerForm.firstname, {
                                        'label': 'Prénom',
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Votre prénom'
                                        }
                                    }) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(registerForm.lastname, {
                                        'label': 'Nom',
                                        'attr': {
                                            'class': 'form-control',
                                            'placeholder': 'Votre nom'
                                        }
                                    }) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_row(registerForm.email, {
                                    'label': 'Email',
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'votre@email.com'
                                    }
                                }) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(registerForm.plainPassword.first, {
                                    'label': 'Mot de passe',
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Votre mot de passe'
                                    }
                                }) }}
                            </div>

                            <div class="mb-4">
                                {{ form_row(registerForm.plainPassword.second, {
                                    'label': 'Confirmer le mot de passe',
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Confirmez votre mot de passe'
                                    }
                                }) }}
                            </div>

                            <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                                <i data-feather="user-plus" class="me-2"></i>
                                S'inscrire
                            </button>

                            <div class="text-center">
                                <p class="mb-0">Déjà inscrit ? 
                                    <a href="{{ path('app_login') }}" class="text-decoration-none">Se connecter</a>
                                </p>
                            </div>
                        {{ form_end(registerForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
